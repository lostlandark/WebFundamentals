<div class="related-items">
  <div class="container">
    <div class="g-wide--push-1 g-medium--push-1">
      <h3 class="related-items--title">
      {% if include.title %}
        {{ include.title }}
      {% else %}
        相关内容
      {% endif %}
      </h3>
      {% if include.list %}
        <ul class="list-links">
          {% for item in include.list %}
            <li class="list__item">{{ item }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</div>
